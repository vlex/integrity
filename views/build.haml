#build{ :class => @build.status }
  = partial(:build_info, :build => @build)
%form{ :action => build_path(@build), :method => :post }
  %input{ :name => "_method", :type => "hidden", :value => "delete" }
  %p
    %button{ :title => "Delete this build" }
      Delete this build
- unless @build.screenshots.empty?
  %ul#screenshots
    - @build.screenshots.each do |screenshot|
      - screenshot_url = "#{build_path(@build)}/#{screenshot}"
      %li
        %a{:href => screenshot_url}
          %img{:src => screenshot_url}
